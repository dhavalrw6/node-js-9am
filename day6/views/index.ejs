    <form class="w-50 mx-auto" method="post" action="/user">
        <h2>Array CRUD</h2>
        <div class="mb-3">
            <input type="hidden" name="id" value="<%= Date.now()  %>">
            <label for="exampleInputEmail1" class="form-label">User Name</label>
            <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Gender: </label>
            <input type="radio" name="gender" value="male" class="form-check-input" id="flexRadioDefault1"> Male
            <input type="radio" name="gender" value="female" class="form-check-input" id="exampleInputPassword1"> Female
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Hobby: </label>
            <input type="checkbox" name="hobby[]" value="reading" class="form-check-input" id="flexRadioDefault1"> reading
            <input type="checkbox" name="hobby[]" value="dancing" class="form-check-input" id="exampleInputPassword1"> dancing
        </div>
        <select class="form-select form-select-sm w-50" name="city"  aria-label=".form-select-sm example">
            <option selected disabled >Open this select menu</option>
            <option value="Rajkot">Rajkot</option>
            <option value="Vadodara">Vadodara</option>
            <option value="Surat">Surat</option>
        </select>
        <div class="form-floating">
            <textarea class="form-control w-50 my-3" name="address" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
            <label for="floatingTextarea">Address</label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div class="d-flex justify-content-center">
        <table border="" cellspacing="0" class="caption-top table w-50 table-bordered" >
        <caption><h2>Users Data</h2></caption>
        <thead>
            <tr>
                <th>username</th>
                <th>Email</th>
                <th>password</th>
                <th>Gender</th>
                <th>Hobby</th>
                <th>City</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.map((user)=>{ %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.password %></td>
                    <td><%= user.gender %></td>
                    <td><%= user.hobby %></td>
                    <td><%= user.city %></td>
                    <td><%= user.address %></td>
                    <td>
                        <a href="/user/<%= user.id %>" class="btn btn-danger">Delete</a>
                        <a href="/user/edit/<%= user.id %>" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>

</body>
